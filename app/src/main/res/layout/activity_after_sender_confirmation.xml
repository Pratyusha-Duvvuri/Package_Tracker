<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvReceiverLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="14dp"
        android:text="My Location"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etReceiverLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="Input Your Location"
        android:inputType="text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvRStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etSenderLocation"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"

        android:text="Start Date:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etRStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="MM/DD/YYYY"
        android:inputType="text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvREndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Delivery Date:"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="MM/DD/YYYY"
        android:inputType="text"
        android:textSize="14sp"
        android:id="@+id/etREndDate" />


    <TextView
        android:id="@+id/tvSSenderLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:" />

    <TextView
        android:id="@+id/tvSStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:" />

    <TextView
        android:id="@+id/tvSEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:" />

    <TextView
        android:id="@+id/tvRPackageDetailHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Package Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvRPackageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Package Type:"
  />



    <TextView
        android:id="@+id/tvRWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:layout_below="@+id/spPackageType"
        android:layout_alignLeft="@+id/tvPackageType"
        android:layout_alignStart="@+id/tvPackageType" />



    <TextView
        android:id="@+id/tvRFragile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvWeight"
        android:layout_alignStart="@+id/tvWeight"
        android:text="Fragile?"
        android:layout_below="@+id/etWidth" />


    <TextView
        android:id="@+id/tvDimensionsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensions" />

    <TextView
        android:id="@+id/tvRLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length:"
        android:layout_alignBottom="@+id/etLength"
        android:layout_alignLeft="@+id/tvDimensionsHeading"
        android:layout_alignStart="@+id/tvDimensionsHeading"
        android:layout_below="@+id/spPackageType" />



    <TextView
        android:id="@+id/tvRWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Width:"

      />




    <TextView
        android:id="@+id/tvRHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:" />

    <TextView
        android:id="@+id/tvRDescription"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/flFAB"

        android:ems="10"
        android:hint="Describe the contents of your package along with any special requests..."
        android:inputType="textMultiLine"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ibRImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        app:srcCompat="@drawable/ic_upload" />

    <FrameLayout
        android:id="@+id/flRFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etEndDate"
        android:layout_alignEnd="@+id/etEndDate"
        android:layout_marginBottom="12dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fbRConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:color/transparent"
            app:backgroundTint="@color/colorPrimaryLight"
            app:elevation="5dp" />

        <TextView
            android:id="@+id/tvRConfirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="16dp"
            android:text="OK"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        app:cardBackgroundColor="#c3e5e2"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp"
        app:contentPadding="13dp">

        <LinearLayout
            android:id="@+id/llcardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
