<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.packagetwitter.ProfileActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/sliding_tabs2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:textAlignment="center"
        app:tabIndicatorColor="@color/colorPrimaryLight"
        app:tabMode="fixed" />

    <RelativeLayout
        android:id="@+id/rlUserHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliding_tabs2"
        android:layout_alignParentStart="true">



        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:layout_margin="20dp"

            android:id="@+id/ivPackageImageCard99"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/ivProfileImage2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        </android.support.v7.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/ivPackageImageCard99"
    android:id="@+id/linearLayout">

</LinearLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="23dp"
            android:text="Status"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:id="@+id/tvNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvStatus"
            android:layout_alignStart="@+id/tvStatus" />

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:background="@android:color/white"
        android:visibility="visible"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rlUserHeader"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
