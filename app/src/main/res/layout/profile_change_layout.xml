<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/ivPackageImageCard99"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp">

        <ImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@color/black" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/name_icon"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ivPackageImageCard99" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/locaation_icon"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/email_icaon"
        android:layout_alignStart="@+id/email_icaon" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="22dp"
        android:id="@+id/email_icaon"
        android:layout_below="@+id/name_icon"
        android:layout_alignStart="@+id/name_icon" />

    <EditText
        android:id="@+id/et_location"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_alignBottom="@+id/locaation_icon"
        android:layout_alignStart="@+id/et_email" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_alignTop="@+id/email_icaon"
        android:layout_alignStart="@+id/et_fullName" />

    <EditText
        android:id="@+id/et_fullName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name_icon"
        android:layout_alignStart="@+id/ivPackageImageCard99"
        android:inputType="text" />
    <Button
        android:id="@+id/btnBackToProfile"

        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.04"
        android:background="@drawable/buttonshape"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />



</RelativeLayout>