    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:contentDescription="@string/profile_other"
        android:id="@+id/ivProfileOther"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#FF000000"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/tvBody"
        android:layout_width="192dp"
        android:layout_height="64dp"
        android:ellipsize="end"
        android:lines="1"
        android:padding="20dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivProfileOther"/>
    <TextView
        android:id="@+id/tvBody2"
        android:layout_width="192dp"
        android:layout_height="64dp"
        android:ellipsize="end"
        android:lines="1"
        android:padding="20dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ivProfileMe"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivProfileMe"
        android:layout_width="62dp"
        android:layout_height="64dp"
        android:layout_gravity="right"
        android:contentDescription="@string/profile_me"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#FF000000"
        />

