<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.packagetwitter.CourierActivity"
    android:orientation="vertical">






    <LinearLayout
        android:id="@+id/locations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"

        android:weightSum="1"
        android:layout_below="@+id/tvTo"
        android:layout_alignParentEnd="true">

        <android.support.v7.widget.CardView
            android:id="@+id/StartLocation"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/EndLocation"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/EndLocation"

            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/etLocationStart"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:layout_above="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:hint="Location"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="28sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="-1dp" />
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="110dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="0.22"
            app:srcCompat="@mipmap/if_arrow_right_392525" />

        <android.support.v7.widget.CardView
            android:id="@+id/EndLocation"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/EndLocation"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/EndLocation"

            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/etLocationEnd"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:layout_above="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:hint="Location"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="28sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="-1dp" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/tvWhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Where Are You Traveling?"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvWhen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/locations"
        android:layout_marginTop="20dp"
        android:text="When?"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/calendar"
        android:layout_below="@+id/tvWhen"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="50dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/calendar"
        android:layout_marginStart="44dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/next" />

    <TextView
        android:id="@+id/tvTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/next"

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentEnd="true"
        android:layout_weight="4.33"
        android:background="@drawable/buttonshape"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="NEXT"
        android:onClick="nextLayout"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to:"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date:"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        android:layout_alignBottom="@+id/tvEndDate"
        android:layout_toStartOf="@+id/textView2"
        android:layout_alignTop="@+id/tvEndDate" />

    <TextView
        android:id="@+id/tvEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date:"
        android:textStyle="bold"
        android:layout_above="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/displaySenderStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next"
        android:layout_marginBottom="50dp"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:id="@+id/displaySenderEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next"
        android:layout_marginBottom="50dp"
        android:layout_alignStart="@+id/tvEndDate" />
</RelativeLayout>