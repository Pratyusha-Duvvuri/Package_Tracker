<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="60dp"
        android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/ivPackageImage"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#FF000000"

        />


    <ImageView
        android:id="@+id/arrow_trans"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="21dp"
        app:srcCompat="@drawable/ic_next" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/green_dot"
        android:layout_alignBottom="@+id/tvStatus"
        android:layout_toEndOf="@+id/ivPackageImage" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@id/tvTitle"
        android:layout_toRightOf="@id/ivStatus"
        android:text="Courier Boarded"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivStatus" />

    <ImageView
        android:id="@+id/ivMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:visibility="gone"
        android:layout_toStartOf="@+id/arrow_trans"
        android:layout_alignBottom="@id/ivStatus"
        app:srcCompat="@drawable/messenger_bubble_large_blue" />


</RelativeLayout>
