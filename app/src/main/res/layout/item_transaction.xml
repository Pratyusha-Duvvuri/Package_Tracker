<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="12dp"
        android:id="@+id/ivPackageImageCard"
        app:cardCornerRadius="30dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ivPackageImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="200dp"

            app:srcCompat="@mipmap/ic_launcher"></ImageView>
    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/green_dot"
        android:layout_alignBottom="@+id/tvStatus"
        android:layout_toEndOf="@+id/ivPackageImageCard" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/ivStatus"
        android:text="Courier Boarded"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivStatus" />

    <ImageView
        android:id="@+id/ivMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:visibility="gone"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_alignBottom="@id/ivStatus"
        app:srcCompat="@drawable/messenger_bubble_large_blue" />


</RelativeLayout>