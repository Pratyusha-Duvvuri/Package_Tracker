    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/next" />





    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/green_dot"
        android:layout_alignBottom="@+id/tvStatus"
        android:layout_toEndOf="@+id/ivPackageImage" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@id/tvTitle"
        android:layout_toRightOf="@id/ivStatus"
        android:text="Courier Boarded"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivStatus" />

    <ImageView
        android:id="@+id/ivMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:visibility="gone"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_alignBottom="@id/ivStatus"
        app:srcCompat="@drawable/messenger_bubble_large_blue" />


</RelativeLayout>

