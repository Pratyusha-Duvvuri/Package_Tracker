<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivPackageImage"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivPackageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvBoarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Boarding"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/ivArriving"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvArrival"
        android:layout_toStartOf="@+id/tvBoarding"
        app:srcCompat="@drawable/arrival"
        android:layout_below="@+id/tvBoarding" />

    <TextView
        android:id="@+id/tvArrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrival"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvBoarding" />

    <ImageView
        android:id="@+id/ivBoarding"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_above="@+id/ivArriving"
        android:layout_alignStart="@+id/ivArriving"
        android:layout_alignTop="@+id/tvBoarding"
        android:layout_toStartOf="@+id/tvBoarding"
        app:srcCompat="@drawable/departures" />

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivPackageImage"
        android:layout_toRightOf="@+id/ivPackageImage"
        android:text="weight"
        android:layout_alignTop="@+id/ivBoarding" />


</RelativeLayout>