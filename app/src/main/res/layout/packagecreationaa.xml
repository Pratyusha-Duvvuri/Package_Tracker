<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <!--FIRST PART WHERE-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.04">

        <TextView
            android:id="@+id/whereTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingLeft="15dp"
            android:text="WHERE" />

        <TextView
            android:id="@+id/whereDescription"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whereTag"
            android:text="From where are you planning on sending it?"
            android:textSize="13dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/etsenderStartLocationB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:gravity="center"
                android:hint="Start Location"
                android:textSize="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/place_autocomplete_fragment" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/if_arrow_right_392525" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
            <!--     card_view:cardElevation="7dp"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                android:id="@+id/etreceiverEndLocationB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:hint="End Location"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#00aaaa" />

    <!--SECOND PART WHO-->


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.04">

        <TextView
            android:id="@+id/whoTag"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingLeft="15dp"

            android:text="WHO" />

        <TextView
            android:id="@+id/whoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whoTag"
            android:paddingLeft="15dp"

            android:text="Who are you sending it to?"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        >

        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">


            <!--set the receiver here-->
            <RelativeLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/whoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/if_user_add_383199" />

                <AutoCompleteTextView
                    android:id="@+id/et_receiverHandle"
                    android:layout_width="100dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:hint="Enter receiver's handle"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/whoIcon" />
            </RelativeLayout>

            <!--</android.support.v7.widget.LinearLayout>-->

        </android.support.v7.widget.CardView>


    </RelativeLayout>


    <View
        android:alpha="0.4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />


    <!--THIRD PART WHEN-->

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        >

        <TextView
            android:id="@+id/whenTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:text="WHEN" />

        <TextView
            android:id="@+id/whenDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whenTag"
            android:paddingLeft="15dp"

            android:text="Mention your availbale daterange to handover package to courier"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">

        <ImageView
            android:id="@+id/startCalendar"

            android:src="@drawable/calendar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="77dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/endCalendar"
            android:src="@drawable/calendar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="74dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/senderStartDateB"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="48dp"
            android:gravity="center"
            android:hint="Start"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/senderEndDateB"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="55dp"
            android:gravity="center"
            android:hint="End"
            android:textSize="20dp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/next"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"

        android:layout_weight="0.65"
        android:background="@drawable/buttonshape"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>