<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.04">

    <Button
        android:id="@+id/next"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.04"
        android:background="@drawable/buttonshape"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <!--FIRST PART WHERE-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.04">

        <TextView
            android:id="@+id/whereTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="WHERE"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:paddingLeft="16dp"
            android:id="@+id/whereDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whereTag"
            android:text="From where are you planning on sending the package?"
            android:textSize="13dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageView6"
        android:layout_marginEnd="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                />

                <TextView
                    android:id="@+id/etsenderStartLocationB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="Start Location"
                    android:textSize="25sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/if_arrow_right_392525"
            android:id="@+id/imageView6" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="10dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/etreceiverEndLocationB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:hint="End Location"
                    android:textSize="25sp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <View
        android:id="@+id/View1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!--SECOND PART WHO-->


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.04">

        <TextView
            android:id="@+id/whoTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:text="WHO" />

        <TextView
            android:id="@+id/whoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:layout_below="@+id/whoTag"
            android:text="Who are you sending it to?"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        >

        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"

            card_view:cardCornerRadius="4dp">


            <!--set the receiver here-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/whoIcon"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/if_user_add_383199" />

                <AutoCompleteTextView
                    android:id="@+id/et_receiverHandle"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:hint="Enter receiver's handle"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/whoIcon" />
            </RelativeLayout>

            <!--</android.support.v7.widget.LinearLayout>-->

        </android.support.v7.widget.CardView>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


    <!--THIRD PART WHEN-->

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        >

        <TextView
            android:id="@+id/whenTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:text="WHEN" />

        <TextView
            android:id="@+id/whenDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whenTag"
            android:paddingLeft="16dp"
            android:text="Mention your availbale daterange to send the package"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.04">

        <RelativeLayout
            android:id="@+id/rlStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/endCalendar"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/calendar"

                />

            <TextView
                android:id="@+id/senderEndDateB"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/endCalendar"
                android:gravity="center"
                android:hint="End"
                android:text="Start Date: "
                android:textSize="16dp" />

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/senderEndDateB"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/senderEndDateB"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/view6"
                android:layout_alignEnd="@+id/view6"
                android:layout_alignStart="@+id/view6" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rlStart">


            <ImageView
                android:id="@+id/startCalendar"

                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/calendar"

                />

            <TextView
                android:id="@+id/senderStartDateB"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/startCalendar"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/startCalendar"
                android:gravity="center"
                android:hint="Start"
                android:text="End Date: "
                android:textSize="16dp" />


            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/senderStartDateB"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/senderStartDateB"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_above="@+id/view5"
                android:layout_alignEnd="@+id/view5"
                android:layout_toEndOf="@+id/senderStartDateB" />

        </RelativeLayout>


    </RelativeLayout>


    </LinearLayout>
    </RelativeLayout>